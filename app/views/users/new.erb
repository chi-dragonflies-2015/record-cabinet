<form class="pure-form pure-form-aligned container" action="/users" method="post">
    <legend><h3>Create a new account :)</h3></legend>
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Username</label>
            <input name="user[username]" type="text" placeholder="Username">
        </div>

        <div class="pure-control-group">
            <label for="password">Password</label>
            <input name="user[password]" type="password" placeholder="Password">
        </div>

        <div class="pure-controls">
            <button type="submit" class="pure-button pure-button-primary">Submit</button>
        </div>
        <p> <%=@warning%> </p>
    </fieldset>
</form>
